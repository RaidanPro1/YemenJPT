<div class="grid grid-cols-1 xl:grid-cols-12 gap-10 animate-in slide-in-from-bottom duration-700">
    
    <!-- LEFT: EDITOR PANEL -->
    <div class="xl:col-span-5 space-y-8">
        <form action="/admin/cms/update" method="POST" enctype="multipart/form-data" class="space-y-8">
            
            <!-- Branding Section -->
            <div class="bg-white p-10 rounded-[3rem] border border-slate-200 shadow-sm space-y-8">
                <div class="flex items-center gap-4 pb-4 border-b border-slate-100">
                    <i class="fa-solid fa-palette text-teal-500"></i>
                    <h4 class="text-lg font-black text-slate-800">الهوية البصرية</h4>
                </div>

                <div class="space-y-6">
                    <div class="space-y-2">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest pr-4">اسم المنظومة (Live Text)</label>
                        <input type="text" name="brand_name" value="<%= settings.brand_name %>" class="w-full bg-slate-50 border border-slate-200 rounded-2xl p-4 text-slate-800 font-bold outline-none focus:border-teal-500">
                    </div>

                    <div class="space-y-2">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest pr-4">شعار الموقع (SVG/PNG)</label>
                        <div class="flex items-center gap-4 bg-slate-50 p-4 rounded-2xl border border-slate-200 border-dashed">
                            <div class="w-12 h-12 bg-white rounded-lg flex items-center justify-center border border-slate-100 shadow-sm">
                                <img src="<%= settings.logo_url %>" class="max-h-full max-w-full">
                            </div>
                            <input type="file" name="logo" class="text-[10px] text-slate-500 flex-1">
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div class="space-y-2">
                            <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest pr-4">Primary Color</label>
                            <div class="flex items-center gap-3 bg-slate-50 p-2 rounded-2xl border border-slate-200">
                                <input type="color" name="primary_color" value="<%= settings.primary_color %>" class="w-10 h-10 rounded-xl cursor-pointer border-none bg-transparent">
                                <span class="text-xs font-mono text-slate-500 uppercase"><%= settings.primary_color %></span>
                            </div>
                        </div>
                        <div class="space-y-2">
                            <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest pr-4">Secondary Color</label>
                            <div class="flex items-center gap-3 bg-slate-50 p-2 rounded-2xl border border-slate-200">
                                <input type="color" name="secondary_color" value="<%= settings.secondary_color %>" class="w-10 h-10 rounded-xl cursor-pointer border-none bg-transparent">
                                <span class="text-xs font-mono text-slate-500 uppercase"><%= settings.secondary_color %></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- SEO Section -->
            <div class="bg-white p-10 rounded-[3rem] border border-slate-200 shadow-sm space-y-8">
                <div class="flex items-center gap-4 pb-4 border-b border-slate-100">
                    <i class="fa-solid fa-search text-[#e1b000]"></i>
                    <h4 class="text-lg font-black text-slate-800">بيانات محركات البحث</h4>
                </div>

                <div class="space-y-6">
                    <div class="space-y-2">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest pr-4">Global Meta Description</label>
                        <textarea name="seo_desc" class="w-full bg-slate-50 border border-slate-200 rounded-2xl p-4 text-slate-800 text-sm font-medium outline-none focus:border-teal-500 min-h-[100px]"><%= settings.seo_desc %></textarea>
                    </div>
                    <div class="space-y-2">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest pr-4">Focus Keywords (Comma Separated)</label>
                        <input type="text" name="seo_keywords" value="<%= settings.seo_keywords %>" class="w-full bg-slate-50 border border-slate-200 rounded-2xl p-4 text-slate-800 text-sm font-medium outline-none focus:border-teal-500">
                    </div>
                </div>
            </div>

            <button type="submit" class="w-full py-6 bg-slate-900 text-white rounded-[2rem] font-black text-lg shadow-2xl shadow-slate-900/40 hover:bg-slate-800 transition-all flex items-center justify-center gap-4">
                <i class="fa-solid fa-cloud-arrow-up"></i> نشر التعديلات فوراً
            </button>

        </form>
    </div>

    <!-- RIGHT: LIVE PREVIEW -->
    <div class="xl:col-span-7 flex flex-col space-y-6 h-[800px]">
        <div class="flex items-center justify-between px-6">
            <h4 class="text-sm font-black text-slate-500 uppercase tracking-widest">المعاينة الحية (raidan.pro)</h4>
            <div class="flex gap-2">
                <div class="w-3 h-3 rounded-full bg-red-400"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
                <div class="w-3 h-3 rounded-full bg-emerald-400"></div>
            </div>
        </div>
        
        <div class="flex-1 bg-slate-200 rounded-[4rem] border-8 border-slate-900 overflow-hidden shadow-2xl shadow-slate-900/30 relative">
            <!-- Simulated Browser UI -->
            <div class="absolute top-0 w-full h-8 bg-slate-900 flex items-center px-8">
                <div class="w-full h-4 bg-slate-800 rounded-full flex items-center px-4">
                    <span class="text-[8px] text-slate-500 font-mono">https://raidan.pro</span>
                </div>
            </div>
            
            <!-- Landing Page Iframe -->
            <iframe src="/?preview=true" class="w-full h-full pt-8 border-none" id="previewIframe"></iframe>
        </div>
    </div>
</div>