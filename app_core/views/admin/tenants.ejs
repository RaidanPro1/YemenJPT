<div class="space-y-10">
    <div class="flex justify-between items-center">
        <h2 class="text-2xl font-black">المستأجرين والمؤسسات</h2>
        <button onclick="document.getElementById('addModal').classList.toggle('hidden')" class="bg-teal-600 text-white font-black px-8 py-3 rounded-full shadow-lg">
            + إضافة مؤسسة جديدة
        </button>
    </div>

    <div class="grid grid-cols-1 gap-6">
        <% tenants.forEach(org => { %>
            <div class="glass p-8 rounded-[2.5rem] flex items-center justify-between group hover:border-teal-500/40 transition-all">
                <div class="flex items-center gap-8">
                    <div class="w-16 h-16 bg-slate-900 rounded-2xl flex items-center justify-center text-teal-500 font-black text-2xl border border-slate-800">
                        <%= org.name[0] %>
                    </div>
                    <div>
                        <h4 class="text-xl font-black"><%= org.name %></h4>
                        <p class="text-xs text-slate-500 font-mono"><%= org.slug %>.ai.raidan.pro</p>
                    </div>
                </div>
                <div class="flex items-center gap-12">
                    <div class="text-right">
                        <p class="text-[10px] uppercase text-slate-500 font-black">CPU Load</p>
                        <p class="text-xl font-black text-emerald-500"><%= org.cpu_usage_current || 0 %>%</p>
                    </div>
                    <div class="flex gap-2">
                        <button class="px-6 py-2 bg-slate-800 rounded-xl text-xs font-bold hover:bg-slate-700">إدارة</button>
                        <button class="px-6 py-2 bg-red-900/20 text-red-500 rounded-xl text-xs font-bold">تعليق</button>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

    <!-- Add Tenant Modal -->
    <div id="addModal" class="fixed inset-0 bg-black/80 backdrop-blur-sm hidden flex items-center justify-center z-50 p-6">
        <div class="glass w-full max-w-lg rounded-[3rem] p-12 space-y-8 animate-in zoom-in duration-300">
            <h3 class="text-2xl font-black text-center">تهيئة عقدة سيادية جديدة</h3>
            <form action="/admin/tenants" method="POST" class="space-y-6">
                <div class="space-y-2">
                    <label class="text-[10px] uppercase text-slate-500 font-black">اسم المؤسسة</label>
                    <input type="text" name="name" required class="w-full bg-slate-950 border border-slate-800 rounded-2xl p-4 text-white outline-none">
                </div>
                <div class="space-y-2">
                    <label class="text-[10px] uppercase text-slate-500 font-black">المعرف الفرعي (Slug)</label>
                    <input type="text" name="slug" placeholder="aden-news" required class="w-full bg-slate-950 border border-slate-800 rounded-2xl p-4 text-white outline-none">
                </div>
                <div class="flex gap-4">
                    <button type="submit" class="flex-1 bg-teal-600 py-4 rounded-2xl font-black shadow-xl">تأكيد وتشغيل</button>
                    <button type="button" onclick="document.getElementById('addModal').classList.toggle('hidden')" class="px-8 py-4 bg-slate-800 rounded-2xl font-black">إلغاء</button>
                </div>
            </form>
        </div>
    </div>
</div>