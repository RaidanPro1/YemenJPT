<div class="space-y-10 animate-in fade-in duration-500">
    <!-- Portal Header -->
    <div class="bg-white p-8 rounded-[2.5rem] border border-slate-200 shadow-sm flex items-center justify-between">
        <div class="flex items-center gap-6">
            <div class="w-16 h-16 bg-teal-600/10 rounded-2xl flex items-center justify-center text-teal-600 border border-teal-100">
                <i class="fa-solid <%= categoryIcon %> text-3xl"></i>
            </div>
            <div>
                <h3 class="text-2xl font-black text-slate-900 leading-none"><%= portalName %></h3>
                <p class="text-slate-500 font-medium mt-2">إدارة والتحكم في عقد المعالجة والأدوات المتخصصة.</p>
            </div>
        </div>
        <div class="flex gap-3">
            <button class="px-6 py-3 bg-slate-900 text-white rounded-xl text-xs font-black flex items-center gap-2 hover:bg-slate-800 transition-all shadow-lg">
                <i class="fa-solid fa-plus"></i> إضافة عقدة جديدة
            </button>
        </div>
    </div>

    <!-- Tools Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% tools.forEach(tool => { %>
            <div class="group bg-white p-8 rounded-[3rem] border border-slate-200 shadow-sm hover:shadow-xl hover:border-teal-500/30 transition-all duration-500 relative overflow-hidden">
                <!-- Status Background Accent -->
                <div class="absolute top-0 right-0 w-32 h-32 bg-slate-50 rounded-bl-[5rem] -mr-8 -mt-8 transition-colors group-hover:bg-teal-50"></div>

                <div class="relative z-10 flex flex-col h-full">
                    <div class="flex justify-between items-start mb-8">
                        <div class="w-14 h-14 bg-white rounded-2xl flex items-center justify-center shadow-md border border-slate-100 text-teal-600 group-hover:scale-110 transition-transform">
                            <i class="fa-solid <%= tool.icon %> text-2xl"></i>
                        </div>
                        <span class="px-3 py-1.5 rounded-full text-[9px] font-black uppercase tracking-widest flex items-center gap-2 <%= tool.status === 'online' ? 'bg-emerald-50 text-emerald-600 border border-emerald-100' : 'bg-red-50 text-red-600 border border-red-100' %>">
                            <span class="w-1.5 h-1.5 rounded-full <%= tool.status === 'online' ? 'bg-emerald-500 animate-pulse' : 'bg-red-500' %>"></span>
                            <%= tool.status === 'online' ? 'Active' : 'Offline' %>
                        </span>
                    </div>

                    <div class="flex-1">
                        <h4 class="text-xl font-black text-slate-800"><%= tool.name %></h4>
                        <p class="text-xs text-slate-400 font-bold mt-1 uppercase tracking-widest"><%= tool.vendor %> • v<%= tool.version %></p>
                        <p class="text-sm text-slate-500 font-medium leading-relaxed mt-4 line-clamp-2"><%= tool.description %></p>
                    </div>

                    <div class="mt-10 pt-6 border-t border-slate-50 flex items-center justify-between">
                        <div class="flex gap-2">
                            <button @click="$dispatch('open-config', { tool: '<%= tool.slug %>' })" class="p-3 bg-slate-100 rounded-xl text-slate-500 hover:bg-slate-200 hover:text-slate-800 transition-all" title="Settings">
                                <i class="fa-solid fa-sliders"></i>
                            </button>
                            <a href="<%= tool.docUrl %>" target="_blank" class="p-3 bg-slate-100 rounded-xl text-slate-500 hover:bg-slate-200 hover:text-slate-800 transition-all" title="Docs">
                                <i class="fa-solid fa-book"></i>
                            </a>
                        </div>
                        <a href="https://<%= tool.slug %>.<%= tool.tenant %>raidan.pro" target="_blank" class="flex items-center gap-3 px-8 py-3 bg-teal-600 text-white rounded-2xl text-xs font-black shadow-lg shadow-teal-600/20 hover:bg-teal-500 transition-all active:scale-95">
                            تشغيل <i class="fa-solid fa-arrow-up-right-from-square text-[10px]"></i>
                        </a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<!-- CONFIG MODAL (Alpine.js) -->
<div x-data="{ open: false, toolData: {} }" 
     @open-config.window="open = true; toolData = $event.detail.tool"
     x-show="open" 
     class="fixed inset-0 z-[200] flex items-center justify-center p-6" x-cloak>
    <div class="absolute inset-0 bg-slate-900/60 backdrop-blur-sm" @click="open = false"></div>
    <div class="bg-white w-full max-w-xl rounded-[3rem] p-12 shadow-2xl relative animate-in zoom-in duration-300">
        <h3 class="text-2xl font-black text-slate-900 mb-8">إعدادات العقدة</h3>
        <div class="space-y-6">
            <div class="space-y-2">
                <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest pr-4">Docker Image Endpoint</label>
                <input type="text" value="raidan-module-registry:5000/meedan-check" class="w-full bg-slate-50 border border-slate-200 rounded-2xl p-4 text-slate-800 font-mono text-xs outline-none focus:border-teal-500">
            </div>
            <div class="space-y-2">
                <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest pr-4">API Key Access</label>
                <input type="password" value="••••••••••••••••" class="w-full bg-slate-50 border border-slate-200 rounded-2xl p-4 text-slate-800 outline-none focus:border-teal-500">
            </div>
        </div>
        <div class="mt-10 flex gap-4">
            <button class="flex-1 bg-teal-600 text-white py-4 rounded-2xl font-black shadow-xl" @click="open = false">حفظ التغييرات</button>
            <button class="px-8 bg-slate-100 text-slate-500 py-4 rounded-2xl font-black" @click="open = false">إلغاء</button>
        </div>
    </div>
</div>